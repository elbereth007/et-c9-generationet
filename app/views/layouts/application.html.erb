            <%= link_to new_person_path, class: 'nav-link' do %>
              <i class="fa fa-plus-circle"></i>
              New Person
            <% end %>
          </li>
<!--          <li class="nav-item">
            <a class="nav-link disabled" href="#">Disabled</a>
          </li> -->
        </ul>

<!-- next 11 lines added 25 jul 17 for solo GenET project adding login links to navbar (step 11) -->
        <ul class="navbar-nav">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'nav-link' %>     <!-- sign out link -->
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %>                           <!-- sign in link -->
            </li>
            <li class="nav-item">
              <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %>                      <!-- sign up link -->
            </li>
          <% end %>
        </ul>
    
