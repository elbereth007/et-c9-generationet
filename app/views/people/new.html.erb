<div class="booyah-box col-10 offset-1">
  
  <h1>Enter Your Person Details</h1>
  <%= simple_form_for @person do |f| %>
    <%= f.input :first_name %>
    <%= f.input :middle_name %>
    <%= f.input :last_name %>
    <%= f.input :sex %>
    
<!-- birth/death dates changed 7 aug 17 to allow broader ranges of years in dropdown menus, can be absolute values (e.g., 1700) or dynamic (Time.now.year + 10) -->
    <%= f.input :birth_date, start_year: 1700, end_year: Time.now.year, prompt: "Unknown" %> 
    <%= f.input :death_date, start_year: 1700, end_year: Time.now.year, prompt: "Unknown/Living" %>   <!-- prompt: allows a "blank" entry, for someone who's still living -->
    
<!-- father/mother/spouse field names/datatypes changed from _id/integer to _name/string 7 aug 17 to be more logical -->
    <%= f.input :father_name %>
    <%= f.input :mother_name %>
    <%= f.input :current_spouse_name %>
    
    <%= f.input :notes %>
    <br />
    <%= f.submit 'Create', class: 'btn btn-primary' %>
  <% end %>
  
</div>
